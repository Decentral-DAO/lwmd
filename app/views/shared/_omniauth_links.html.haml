- if devise_mapping.omniauthable?
  = link_to omniauth_authorize_path(:member, "facebook"), id: "facebook_login" do
    %div{:class => "ui facebook fluid button"}
      %i{:class => "facebook square large icon"}
      Log in with Facebook
  %br/
  = link_to omniauth_authorize_path(:member, "google"), id: "google_login" do
    %div{:class => "ui google plus fluid button"}
      %i{:class => "google plus square large icon"}
      Log in with Google
