- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to omniauth_authorize_path(resource_name, provider), id: "fb_login" do

      %div{:class => "ui #{provider.to_s} fluid button"}
        %i{:class => "#{provider.to_s} square large icon"}
        Log in with #{provider.to_s.titleize}
    %br/
