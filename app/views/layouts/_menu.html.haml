.ui.main.menu
  .item
    = image_tag("tri-club-logo.png", alt:"PTC Logo")
  .item
    %b Pittsburgh Triathlon Club Membership Directory
  - if member_signed_in?
    .right.menu
      .ui.dropdown.item
        = current_member.name
        %i.dropdown.icon
        .menu
          - if current_member.is_admin?
            = link_to 'Memberships', memberships_path, class: "item"
            = link_to 'Members', members_path, class: "item"
          = link_to 'Profile', member_path(current_member), class: "item"
          = link_to 'Logout', destroy_member_session_path, method: :delete, class: "item"
