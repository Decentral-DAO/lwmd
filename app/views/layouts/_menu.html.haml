.ui.main.menu
  .item
    = image_tag("PTCLogo-dark.png", alt:"PTC Logo")
  .item
    %b Pittsburgh Triathlon Club Membership Directory
  - if member_signed_in?
    .right.menu
      .ui.dropdown.item
        = image_tag(current_member.avatar.url(:tiny), class: "ui avatar image")    
        = current_member.name
        %i.dropdown.icon
        .menu
          - if current_member.is_admin?
            = link_to 'Memberships', memberships_path, class: "item"
            = link_to 'Members', members_path, class: "item"
          = link_to 'Profile', profile_path, class: "item"
          = link_to 'Logout', destroy_member_session_path, method: :delete, class: "item"
