- flash.each do |key, value|
  %div{:class => "#{flash_class(key)} closable"}
    %i.close.icon
    = value
.two.column.stackable.ui.grid
  .column
    %h2.ui.header
      Members
  .column.right.aligned
    = link_to(new_member_path) do
      .ui.blue.labeled.icon.button
        %i.user.icon
        Add Member
%table.ui.table.segment
  %thead
    %tr
      %th Active?
      %th Name
      %th Email
      %th Gender
      %th USAT #
      %th Birthdate
      %th Notes
  %tbody
    - @members.each do |member|
      %tr
        %th= member.active
        %th= member.name
        %th= member.email
        %th= member.gender
        %th= member.usat_number
        %th= member.birthdate
        %th= member.notes
